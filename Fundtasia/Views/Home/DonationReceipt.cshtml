@model Donation
@{
    ViewBag.Title = "Donation Receipt";
}


<div class="card">
    <div class="card-body">
        <h2 class="card-title">🙏 <u>THANK YOU FOR DONATING!</u> 🙏</h2>
        <table class="receipt-table">
            <tr>
                <td>
                    <img src="~/Images/Uploads/Event/@Model.Event.CoverImage" style="height:300px; object-fit:cover;" />
                </td>
            </tr>
            <tr>
                <td>Name :</td>
                <td><div class="receipt-align"><b>@Model.User.FirstName @Model.User.LastName</b></div></td>
            </tr>
            <tr>
                <td>Event Name :</td>
                <td><div class="receipt-align"><b>@Model.Event.Title</b></div></td>
            </tr>
            <tr>
                <td>Time Donated :</td>
                <td><div class="receipt-align"><b>@Model.TimeDonated</b></div></td>
            </tr>
            <tr>
                <td>Amount Donated :</td>
                <td><div class="receipt-align"><b><u>RM @Model.Amount.00</u></b></div></td>
            </tr>

        </table>
    </div>
</div>


<br />
<form action="~/Home/Donation">
    <input type="submit" value="Back to Donation Page" class="button-normal" />
</form>
