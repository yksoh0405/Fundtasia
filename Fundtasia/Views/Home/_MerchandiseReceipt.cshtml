@using PagedList
@using PagedList.Mvc
@model IPagedList<UserMerchandise>
@{
    var ao = new AjaxOptions
    {
        UpdateTargetId = "target",
        LoadingElementId = "loader",
        OnSuccess = "highlight"
    };
    string[] fields = {"Purchase Time"};
    string sort = Request.Params["sort"];
    string sortdir = Request.Params["sortdir"];
    string keyword = Request.Params["keyword"];
}

<link href="~/Content/receipt.css" rel="stylesheet" />

@foreach (var f in fields)
{
    string d = "ASC";
    string c = "";

    if (f == sort)
    {
        d = sortdir == "DESC" ? "ASC" : "DESC";
        c = sortdir;
    }
}

@foreach (var d in Model.Take(1))
{
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">🙏 <u>THANK YOU FOR BUYING OUR MERCHANDISE!</u> 🙏</h2>
            <table class="receipt-table">
                <tr>
                <td><u><b>Image of the Merchandise</b><u></td>
                <img src="~/Images/Uploads/Merchandise/@d.Merchandise.Image " style="height:300px; object-fit:cover;" />
                </tr>
                <tr>
                    <td>Name :</td>
                    <td><div class="receipt-align"><b>@d.User.FirstName @d.User.LastName</b></div></td>
                </tr>
                <tr>
                    <td>Merchandise Name :</td>
                    <td><div class="receipt-align"><b>@d.Merchandise.Name</b></div></td>
                </tr>
                <tr>
                    <td>Merchandise Size :</td>
                    <td><div class="receipt-align"><b>@d.Size</b></div></td>
                </tr>
                <tr>
                    <td>Purchase Time :</td>
                    <td><div class="receipt-align"><b>@d.PurchaseTime</b></div></td>
                </tr>
                <tr>
                    <td>Delivery Address :</td>
                    <td><div class="receipt-align"><b>@d.FullName</b></div></td>
                </tr>
                <tr>
                    <td></td>
                    <td><div class="receipt-align"><b>@d.StreetAddress</b></div></td>
                </tr>
                <tr>
                    <td></td>
                    <td><div class="receipt-align"><b>@d.PostalCode, @d.City, @d.State</b></div></td>
                </tr>
                <tr>
                    <td>Amount Donated :</td>
                    <td><div class="receipt-align"><b><u>RM @d.Price.00</u></b></div></td>
                </tr>

            </table>
        </div>
    </div>
}

<br />
<form action="~/Home/Donation">
    <input type="submit" value="Back to Donation Page" class="button-normal" />
</form>
<br />
<br />

@{
    var po = PagedListRenderOptions.ClassicPlusFirstAndLast;
    po.LinkToFirstPageFormat = "First";
    po.LinkToLastPageFormat = "Last";
    po.LinkToPreviousPageFormat = "Previous";
    po.LinkToNextPageFormat = "Next";
}
