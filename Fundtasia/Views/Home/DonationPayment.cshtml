@using Fundtasia
@model DonationPaymentVM
@{
    ViewBag.Title = "Donation Payment";

    IEnumerable<Donation> donation = ViewBag.Donation;
}

<link href="~/Content/payment.css" rel="stylesheet" />

<body>
    <form method="post" action="">
        <div class="card" style="width: 28rem;">
            <div class="card-body">
                <h2 class="card-title">💰 Donation Amount 💰</h2>
                <h5 class="card-title">Enter the amount:</h5>
                @Html.TextBoxFor(d => d.Amount, new { @class = "form-control", autocomplete = "off", placeholder = "Enter here" })
                @Html.ValidationMessageFor(d => d.Amount, "", new { @class = "error-msg" })
                <br />
                <h5 class="card-title">Select Event:</h5>
                @Html.DropDownListFor(d => d.EventId, (SelectList)ViewBag.EventList, "-- Select One --", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.EventId, "", new { @class = "error-msg" })
            </div>
        </div>

        <div class="card" style="width: 28rem;">
            <div class="card-body">
                <h2 class="card-title">💳 Card Details 💳</h2>
                <h5>Name : </h5>
                <input type="text" class="form-control" id="" placeholder="Name on Card" required><br />
                <h5>Card Number : </h5>
                <input type="text" class="form-control" id="" placeholder="0000 0000 0000 0000" required><br />
                <h5>Expiry Date : </h5>
                <input type="text" class="form-control" id="" placeholder="(MM/YY)" required><br />
                <h5>CVV : </h5>
                <input type="text" class="form-control" id="" placeholder="CVV" required><br />
            </div>
        </div>

        <div class="card" style="width: 28rem;">
            <div class="card-body">
                <h2 class="card-title">Verification</h2>
                <h5>reCAPTCHA </h5>
                <p>reCAPTCHA here</p>
                <input type="submit" value="Proceed" class="donate-submit" />
            </div>
        </div>
    </form>
</body>

