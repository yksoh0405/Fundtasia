@{
    ViewBag.Title = "Sign Up";
}

@section head{
    <link href="~/Content/LoginRegister.css" rel="stylesheet" />
}

<form action="" method="post" id="registerForm" class="form-control">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-lg-12    col-md-8">
            <div class="form-group">
                <h5>
                    @Html.Label("email", "Email Address ")
                    <span class="text-danger">*</span>
                </h5>
                @Html.TextBox("email", null, new { autofocus = "", @class = "form-control", id = "email", required = "" })
            </div>
        </div>
        <div class="col-lg-12 col-md-8">
            <div class="form-group" id="userName-container">
                <div id="lastName-container">
                    <h5>
                        @Html.Label("lastName", "Last Name ")
                        <span class="text-danger">*</span>
                    </h5>
                    @Html.TextBox("lastName", null, new { @class = "form-control", id = "lastName", required = "" })
                </div>
                <div id="firstName-container">
                    <h5>
                        @Html.Label("firstName", "First Name ")
                        <span class="text-danger">*</span>
                    </h5>
                    @Html.TextBox("firstName", null, new { @class = "form-control", id = "firstName", required = "" })
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-8">
            <div class="form-group">
                <h5>
                    @Html.Label("newPwd", "Password ")
                    <span class="text-danger">*</span>
                </h5>
                @Html.TextBox("password", null, new { type = "password", @class = "form-control", id = "newPwd", required = "" })
            </div>
        </div>
        <div class="col-lg-12 col-md-8">
            <div class="form-group">
                <h5>
                    @Html.Label("confirmPwd", "Confirm Password ")
                    <span class="text-danger">*</span>
                </h5>
                @Html.TextBox("confirmPwd", null, new { type = "password", @class = "form-control", id = "confirmPwd", required = "" })
            </div>
        </div>
    </div>







    <br />

    <!-- Submit Button -->
    <input type="submit" name="registerBtn" value="Register" id="registerBtn" />
</form>
