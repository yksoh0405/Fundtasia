@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="" method="post" id="registerForm" class="form-control">
    <div class="form-group">
        <h5><label>Email Address</label></h5>
        <input type="email" class="form-control" name="email" value="">
    </div>

    <div class="form-group" id="userName-container">
        <div id="lastName-container">
            <h5><label>Last Name</label></h5>
            <input type="text" class="form-control" name="lastName" value="">
        </div>
        <div id="firstName-container">
            <h5><label>First Name</label></h5>
            <input type="text" class="form-control" name="firstName" value="">
        </div>
    </div>

    <div class="form-group">
        <h5><label>Password</label></h5>
        <input type="password" class="form-control" name="newPwd" value="">
    </div>

    <div class="form-group">
        <h5><label>Confirm Password</label></h5>
        <input type="password" class="form-control" name="confirmPwd" value="">
    </div>
    <br />

    <!-- Submit Button -->
    <input type="submit" name="registerBtn" value="Register" id="registerBtn" />
</form>
