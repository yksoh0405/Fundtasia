
@{
    ViewBag.Title = "Event Detail";
}

@section head{
    <style>
        #owl-demo .item img {
            display: block;
            width: 100%;
            height: auto;
        }
    </style>
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h2 class="section-title text-center">Title Display Here</h2>
    </div>
</div>

<!-- YouTube Iframe -->
<div class="row">
    <div class="col-lg-8 mx-auto">
        <iframe width="770" height="433" src="https://www.youtube.com/embed/GneZt-6cztA" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-lg-8 mx-auto">
        <h4></h4>
    </div>
</div>

<!-- Carousel display image -->
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active w-100">
                    <img  class="d-block w-100" height="433" src="~/Images/Merchandise/shirt1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" height="433" src="~/Images/Merchandise/shirt2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" height="433" src="~/Images/Merchandise/shirt3.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


<!-- Target Progress Bar -->
<div class="row">
    <div class="col-lg-12 mx-auto mt-5">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%; color: #f4978e"></div>
        </div>
    </div>
</div>

<!-- Article -->
<div class="row mt-5">
    <div class="col-lg-12">
        <div class="section-title">
            <h3>Summary</h3>
        </div>
        <p class="text-justify">
            Article display here
        </p>
    </div>
    <div class="col-lg-12">
        <div class="section-title">
            <h3>Challenges</h3>
        </div>
        <p class="text-justify">
            Article display here
        </p>
    </div>
    <div class="col-lg-12">
        <div class="section-title">
            <h3>Solution</h3>
        </div>
        <p class="text-justify">
            Article display here
        </p>
    </div>
</div>

@section foot{
    <script>
        $(document).ready(function () {

            $("#owl-demo").owlCarousel({

                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true

            });

        });
    </script>
}