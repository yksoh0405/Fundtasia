@{
    ViewBag.Title = "Login";
}

@section head{
    <link href="~/Content/LoginRegister.css" rel="stylesheet" />
}

<form action="" method="post" id="loginForm" class="form-control">
    <div class="form-group">
        <h5>@Html.Label("email", "Email Address")</h5>
        @Html.TextBox("email", null, new { autofocus = "", @class = "form-control", id = "email", required = "" })
    </div>

    <div class="form-group">
        <h5>@Html.Label("loginPwd", "Password")<label>Password</label></h5>
        @Html.TextBox("loginPwd", null, new { type = "password", @class = "form-control", id = "loginPwd", required = "" })
    </div>

    <a href="~/Home/ForgotPassword">Forgot Password...</a>

    <!-- Submit Button -->
    <input type="submit" name="loginBtn" value="Login" id="loginBtn" />
</form>