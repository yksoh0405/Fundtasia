@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="" method="post" id="loginForm" class="form-control">
    <div class="form-group">
        <h5><label>Email Address</label></h5>
        <input type="email" class="form-control" name="email" value="">
    </div>

    <div class="form-group">
        <h5><label>Password</label></h5>
        <input type="password" class="form-control" name="loginPwd" value="">
    </div>

    <a href="~/Home/ForgotPassword">Forgot Password...</a>

    <!-- Submit Button -->
    <input type="submit" name="loginBtn" value="Login" id="loginBtn" />
</form>