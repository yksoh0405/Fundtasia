@model ClientUserEditVM

@{
    ViewBag.Title = "Edit Client User";
}

@section breadcrumb{
    <li class="breadcrumb-item">
        @Model.Id
    </li>
}

<link href="~/Content/UserList.css" rel="stylesheet" />

<form action="" method="post" class="editUser">
    <div id="editUserForm">
        <div class="form-group">
            <label>Last Name: </label>
            @Html.TextBoxFor(s => s.LastName, new { maxlength = "50", data_upper = "", autofocus = "", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>First Name: </label>
            @Html.TextBoxFor(s => s.FirstName, new { maxlength = "50", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email: </label>
            @Html.TextBoxFor(s => s.Email, new { maxlength = "150", @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Status: </label>
            <div>
                <label id="userStatus">@Html.RadioButtonFor(s => s.Status, "Active") Active </label>
                <label>@Html.RadioButtonFor(s => s.Status, "Inactive") Inactive </label>
            </div>
        </div>

        <div id="editUserBtn">
            <button class="edit-btn">Edit</button>&nbsp;&nbsp;&nbsp;
            <button type="reset" class="reset-btn">Reset</button>
        </div>
    </div>
</form>