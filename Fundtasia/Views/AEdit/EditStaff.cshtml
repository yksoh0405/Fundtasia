@model UserEditVM

@{
    ViewBag.Title = "Edit Staff";
}

@section breadcrumb{
    <li class="breadcrumb-item">
        @Model.Id.ToString()
    </li>
}

<link href="~/Content/UserList.css" rel="stylesheet" />

<form action="" method="post" class="editStaff">
    <div id="editStaffForm">
        <div class="form-group">
            <label>Last Name: </label>
            @Html.TextBoxFor(s => s.LastName, new { maxlength = "50", data_upper = "", autofocus = "", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.LastName)
        </div>

        <div class="form-group">
            <label>First Name: </label>
            @Html.TextBoxFor(s => s.FirstName, new { maxlength = "50", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.FirstName)
        </div>

        <div class="form-group">
            <label>Email: </label>
            @Html.TextBoxFor(s => s.Email, new { maxlength = "150", @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Status: </label>
            <div>
                <label id="userStatus">@Html.RadioButtonFor(s => s.Status, "Active") Active </label>
                <label>@Html.RadioButtonFor(s => s.Status, "Inactive") Inactive </label>
            </div>
        </div>

        <div class="form-group">
            <label>Role: </label>
            <div>
                <label id="staffRole">@Html.RadioButtonFor(s => s.Role, "Admin") Admin </label>
                <label>@Html.RadioButtonFor(s => s.Role, "Staff") Staff </label>
            </div>
        </div>

        <div id="editStaffBtn">
            <button class="edit-btn">Edit</button>&nbsp;&nbsp;&nbsp;
            <button type="reset" class="reset-btn">Reset</button>
        </div>
    </div>
</form>