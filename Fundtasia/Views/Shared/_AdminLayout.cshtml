<!DOCTYPE html>
@{ 
    var ao = new AjaxOptions
    {
        UpdateTargetId = "target",
        LoadingElementId = "loader",
        OnSuccess = "highlight"
    };
}

<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link rel="icon" href="~/Images/Logos/logo-icon.png">

    <!-- CSS -->
    <link href="~/Content/style-admin.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <!-- This css code is a type of kit that need user to register the font awesome account to get it -->
    <script src="https://kit.fontawesome.com/d57fff88a0.js" crossorigin="anonymous"></script>

    <!-- Embeded CSS-->
    @RenderSection("head", false)
</head>
<body>

    <!-- Loading Circle -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full" data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <!-- Top Bar -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin6">
                    <!-- Dashboard link-->
                    <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">
                        <!-- Logo icon -->
                        <b class="logo-icon">
                            <img src="~/Images/Logos/small-logo-icon.png" alt="homepage" class="img-fluid" />
                        </b>
                        <!-- Logo text -->
                        <span class="logo-text">
                            <img src="~/Images/Logos/small-text-black.png" alt="homepage" class="img-fluid" />
                        </span>
                    </a>
                    <a class="nav-toggler waves-effect waves-light text-dark d-block d-md-none" href="javascript:void(0)"><i class="fas fa-bars"></i></a>
                </div>


                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <!-- This menu button will be display if width <= 766px -->
                    <ul class="navbar-nav d-none d-md-block d-lg-none">
                        <li class="nav-item">
                            <a class="nav-toggler nav-link waves-effect waves-light text-white" href="javascript:void(0)"><i class="fas fa-bars fa-times"></i></a>
                        </li>
                    </ul>
                    <!-- This bar will be hidden if width > 766px -->
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        <!-- Search bar -->
                        @* Only display this for AList controller *@
                        @if (ViewContext.RouteData.Values["controller"].ToString() == "AList")
                        {
                            <li class=" in">
                                @using (Ajax.BeginForm(null, null, ao, new { @class = "app-search d-none d-md-block me-3", role = "search" }))
                                {
                                    @Html.TextBox("keyword", null, new { autofocus = "", type = "search", placeholder = "Search", @class = "form-control mt-0" })
                                    <a href="#" class="active">
                                        <i class="fa fa-search"></i>
                                    </a>
                                }
                            </li>
                        }

                        <!-- Display staff / admin name -->
                        <li>

                            <a class="profile-pic" href="#">
                                <span class="text-white font-medium">Profile</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- Left Side -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <div class="scroll-sidebar">
                <nav class="sidebar-nav">
                    <!-- Sidebar link display here -->
                    <ul id="sidebarnav">
                        <li class="sidebar-item pt-2 selected">
                            <a href="@Url.Action("Dashboard", "Admin")" class="sidebar-link">
                                <i class="fas fa-chart-line"></i>
                                <span class="hide-menu">Dashbaord</span>
                            </a>
                        </li>
                        <li class="sidebar-item pt-2 selected">
                            <a href="@Url.Action("Profile", "Admin")" class="sidebar-link">
                                <i class="fas fa-user"></i>
                                <span class="hide-menu">Profile</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Staff", "AList")" class="sidebar-link">
                                <i class="far fa-id-card"></i>
                                <span class="hide-menu">Staff</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("ClientUser", "AList")" class="sidebar-link">
                                <i class="fas fa-user"></i>
                                <span class="hide-menu">User</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Event", "AList")" class="sidebar-link">
                                <i class="fas fa-calendar-week"></i>
                                <span class="hide-menu">Event</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Merchandise", "AList")" class="sidebar-link">
                                <i class="fas fa-store-alt"></i>
                                <span class="hide-menu">Merchandise</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Donation", "AList")" class="sidebar-link">
                                <i class="fas fa-hand-holding-usd"></i>
                                <span class="hide-menu">Donation</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Report", "AList")" class="sidebar-link">
                                <i class="fas fa-file-alt"></i>
                                <span class="hide-menu">Report</span>
                            </a>
                        </li>
                        <li class="text-center p-20 upgrade-btn">
                            <button type="button" class="btn d-grid btn-danger text-white w-100" data-bs-toggle="modal" data-bs-target="#logOutModal">Log Out</button>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Right Side -->
        <div class="page-wrapper" style="min-height: 250px;">
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <!-- Page title display here -->
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">@ViewBag.Title</h4>
                    </div>

                    <!-- Create button -->
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <div class="d-md-flex">
                            <ol class="breadcrumb ms-auto">
                                <li>@Html.ActionLink("Back To Client Page", "Index", "Home", null, new { @class = "text-info" })</li>
                            </ol>
                            @* Only display this for AList controller (Except Donation, because we dun create record for donation) *@
                            @if (ViewContext.RouteData.Values["controller"].ToString() == "AList" && ViewContext.RouteData.Values["action"].ToString() != "Donation")
                            {
                                @Html.ActionLink("Create", "Create" + ViewContext.RouteData.Values["action"].ToString(), "ACreate", null, new { @class = "btn btn-info  d-none d-md-block pull-right ms-3 hidden-xs hidden-sm waves-effect waves-light text-white" })
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Main Content Display Here -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="white-box" id="target">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer display here -->
            <footer class="footer text-center">
                @DateTime.Today.Year &copy; Copyrighted by <strong>@Html.ActionLink("Fundtasia", "Index", "Home", null, new { @class = "text-dark" })</strong>
            </footer>
        </div>
    </div>

    <!-- Modal Display -->
    <div id="logOutModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="logOutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="logOutModalLabel">Log Out</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Click "Log Out" to log out your account, else click anywhere to cancel
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn d-grid btn-danger text-white" data-bs-dismiss="modal">
                        Close
                    </button>
                    @using (Html.BeginForm("Logout", "UserAuth", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        <button href="javascript:document.getElementById('logoutForm').submit()" class="btn waves-effect waves-light btn-rounded btn-light-danger text-danger">Log Out</button>
                    }
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/app-style-switcher.js"></script>
    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/sidebarmenu.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/app.js"></script>

    <!-- Embeded JS -->
    @RenderSection("foot", false)
    @RenderSection("Scripts", false)
</body>
</html>
