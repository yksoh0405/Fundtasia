@model UserMerchandise
@{
    ViewBag.Title = "View Merchandise Sale";
}

@section breadcrumb{
    <li class="breadcrumb-item">
        @Model.Id
    </li>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3">
                        <img src="~/Images/Uploads/Merchandise/@Model.Merchandise.Image" class="img-fluid" />
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.Id, "Order ID", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.MerchandiseId, "Merchandise Name", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Merchandise.Name, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.UserId, "Buyer ID", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.Price, "Total Price", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.PurchaseTime, "Purchase Time", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.PurchaseTime, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.Size, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-8">
                                @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-12">
                        <h4 class="mb-3">Billing Address</h4>
                        <div class="row">
                            <div class="col-lg-3">
                                @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                @Html.LabelFor(model => model.StreetAddress, "Street Address", htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-3" })
                            </div>
                            <div class="col-lg-9">
                                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>