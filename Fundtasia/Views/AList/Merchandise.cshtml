@{
    ViewBag.Title = "Admin Merchandise";
}

<!DOCTYPE html>
<link href="~/Content/merchandiseAdmin.css" rel="stylesheet" />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Merchandise</title>
</head>
<body>
    <button type="button" class="create-btn">+ Add New Product</button>


    <div class="container">
        <div class="row">

            @foreach (var shirt in Model)
            {
                <div class="col-md-3 col-sm-11">
                    <div class="card text-center">
                        <img src="~/Images/Merchandise/@shirt.Image" />
                        <div class="card-body">
                            <h4>RM @shirt.Price.00</h4>
                            <h4 class="card-title" style="min-height:50px;">@shirt.Name</h4>
                            <button type="button" class="edit-btn">Edit</button>
                            <button type="button" class="delete-btn">Delist</button>
                        </div>
                    </div>
                </div>
            }

            <div class="col-md-3 col-sm-11">
                <div class="card text-center">
                    <img src="~/Images/Merchandise/shirt1.jpg" />
                    <div class="card-body">
                        <h4>RM 50.00</h4>
                        <h4 class="card-title">Stop Poverty V1 T-Shirt</h4>
                        <button type="button" class="edit-btn">Edit</button>
                        <button type="button" class="delete-btn">Delist</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
