@model ClientUserChangeEmail

@{
    ViewBag.Title = "Change Email";
}

@section head{
    <link href="~/Content/LoginRegister.css" rel="stylesheet" />
}

<form action="" method="post" id="loginForm" class="form-control" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12 col-md-8">
            <h5>@Html.Label("email", "Current Email Address")</h5>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "viewProf", @readonly = "" })
        </div>

        <div class="form-group col-lg-12 col-md-8">
            <h5>
                @Html.LabelFor(model => model.NewEmail, htmlAttributes: new { @class = "" })
                <span class="text-danger">*</span>
            </h5>
            @Html.EditorFor(model => model.NewEmail, new { htmlAttributes = new { @class = "form-control", required = "", autofocus = "" } })
        </div>

        @Html.TextBoxFor(model => model.Id, new { hidden = "", @readonly = "" })
    </div>

    <br />

    <div id="editUserBtn">
        <button class="changeBtn">Change</button>&nbsp;&nbsp;&nbsp;
        <button type="reset" class="reset-btn">Reset</button>
    </div>
</form>