@model ReportInsertVM
@{
    ViewBag.Title = "Create Report";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group mb-4">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-0" })
                        <div class="col-md-12 border-bottom p-0">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-0" })
                        <div class="col-md-12 border-bottom p-0">
                            @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "col-lg-6 col-md-12 p-0" })
                        <div class="col-md-12 border-bottom p-0">
                            @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control p-3 border-0", @readonly = "" } })
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <div class="col-sm-12">
                            <button class="btn btn-success rounded-pill text-white">Submit</button>
                            <button class="btn btn-warning rounded-pill text-white" type="RESET">Reset</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>