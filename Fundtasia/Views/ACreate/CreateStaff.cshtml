@model User

@{
    ViewBag.Title = "Create Staff";
}

<link href="~/Content/UserList.css" rel="stylesheet" />

<form action="" method="post" class="createStaff">
    <div id="createStaffForm">
        <div class="form-group">
            <label>Last Name: </label>
            @Html.TextBoxFor(s => s.LastName, new { maxlength = "50", data_upper = "", autofocus = "", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>First Name: </label>
            @Html.TextBoxFor(s => s.FirstName, new { maxlength = "50", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email: </label>
            @Html.TextBoxFor(s => s.Email, new { maxlength = "150", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Password: </label>
            @Html.TextBoxFor(s => s.PasswordHash, new { maxlength = "100", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Role: </label>
            <div>
                <label id="staffRole">@Html.RadioButtonFor(s => s.Role, "Admin") Admin </label>
                <label>@Html.RadioButtonFor(s => s.Role, "Staff", new { @checked = true }) Staff </label>
            </div>
        </div>

        <div id="createStaffBtn">
            <button class="create-btn">Create</button>&nbsp;&nbsp;&nbsp;
            <button type="reset" class="reset-btn">Reset</button>
        </div>
    </div>
</form>